<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:elevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <ImageView
            android:id="@+id/ivSellerImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tvSellerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/ivSellerImage"
            android:text="MORUS"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tvSellerTel"
            app:layout_constraintLeft_toRightOf="@id/ivSellerImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSellerTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSellerName"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/ivSellerImage"
            android:text="+998 90 999 99 99"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivSellerImage"
            app:layout_constraintTop_toBottomOf="@id/tvSellerName" />

        <TextView
            android:id="@+id/tvSellerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSellerName"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/tvSellerTel"
            android:text="morus@mail.ru"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvSellerTel"
            app:layout_constraintTop_toBottomOf="@id/tvSellerName" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>