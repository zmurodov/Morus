<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivNewsDetailImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ananas" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivNewsBy"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16sp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNewsBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/ivNewsBy"
                android:maxLength="30"
                android:text="Yakubova Dilnoza"
                android:textColor="#000"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ivNewsBy"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivNewsFav"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@id/ivNewsChat"
                android:src="@drawable/ic_fav"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ivNewsChat"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivNewsChat"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@id/ivNewsTelegram"
                android:src="@drawable/ic_message"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ivNewsTelegram"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivNewsTelegram"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@id/ivNewsBookmark"
                android:src="@drawable/ic_telegram"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ivNewsBookmark"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivNewsBookmark"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_bookmark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16sp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tvNewsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem dfdsfgh sdfscsdc fdgdcc dfgdfvdfvdf xzczxc rdtyft yf tyftghggfh"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNewsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.20.1243"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvNewsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="dsfdsfsdfsd fsdf sdf sdfsdfs fds fsdf sdfs dsfsfsadfdf sdf df ds ffsd fsdfsdfad
 dsf sdfsd fdsfsdafdsfad fadsfasdfsdafasdfdsafdasfdsf sdf dsfsdf dsfdsfasdfdfsdafdsdgdsf uadfg yudsagf ygfyga yg fuygadyfugadyfgyaudgfydsgf ygsdfyugaydfgydgfygdfyg yfg yadgfydgyfgdysfgydsgfyadgy gydgf yagdyfgdyfgy gydgfygdyfgy agdyfgydgfygasdyfgadysgfy agdyfgdyugfyadsgfyadgsyfgayu gadysgfyadsgfygdayfgays gydsdgfydsgyfgdyagfydgfysdagyuf gdsayfgydasgf ysdgayfgdyfgaydgfy agdyfgds " />
        </LinearLayout>
    </LinearLayout>
</ScrollView>